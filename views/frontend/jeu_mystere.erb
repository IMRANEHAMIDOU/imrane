<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jeu du Nombre Mystère</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-r from-green-400 to-blue-500 min-h-screen flex items-center justify-center">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-lg">
        <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Jeu du Nombre Mystère</h1>
        <div class="mb-6">
            <p class="text-xl text-gray-600 text-center">Devinez le nombre entre 1 et 100 !</p>
        </div>
        <div class="flex flex-col items-center mb-6">
            <input id="nombre" type="number" min="1" max="100" class="border-2 border-gray-300 p-2 w-1/2 text-xl rounded-lg mb-4 text-center" placeholder="Entrez votre nombre">
            <button id="jouer" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-6 rounded-full shadow-lg transition-all duration-300 transform hover:scale-105">Deviner</button>
        </div>
        <div id="message" class="text-center text-xl text-gray-700"></div>
    </div>

    <script>

        let correctNumber = Math.floor(Math.random() * 100) + 1;
        
        console.log(correctNumber)

        document.getElementById('jouer').addEventListener('click', function () {

            const nombre = parseInt(document.getElementById('nombre').value);
            const messageElement = document.getElementById('message');

            if (isNaN(nombre) || nombre < 1 || nombre > 100) {
                messageElement.textContent = "Veuillez entrer un nombre entre 1 et 100";
                return;
            }

            if (nombre < correctNumber) {
                messageElement.textContent = "Trop petit ! Essayez encore.";
                messageElement.classList.remove('text-gray-700');
                messageElement.classList.add('text-red-500');
            } else if (nombre > correctNumber) {
                messageElement.textContent = "Trop grand ! Essayez encore.";
                messageElement.classList.remove('text-gray-700');
                messageElement.classList.add('text-red-500');
            } else {
                messageElement.textContent = `Bravo ! Vous avez trouvé le nombre mystère.`;
                messageElement.classList.remove('text-red-500');
                messageElement.classList.add('text-green-500');
                document.getElementById('jouer').disabled = true;
            }
        });
    </script>

</body>
</html>
